{
  "Version": "1.0.0.0",
  "Serilog": {
    "MinimumLevel": "Debug", 
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/logs/Pol.Web.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "IdentityServer4": "Data Source=(LocalDb)\\MSSQLLocalDB;database=IdentityServer4;trusted_connection=yes;",
    "AspNetCoreIdentity": "Data Source=(LocalDb)\\MSSQLLocalDB;database=AspNetCoreIdentity;trusted_connection=yes;"
  },
  "AllowedHosts": "*",
  "UseAuthentication": true 
}
